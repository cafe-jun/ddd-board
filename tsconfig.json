{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "outDir": "dist",
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@instrstructure/*": ["src/instrstructure/*"],
      "@application/*": ["src/application/*"]
    }
  },
  "include": ["src/**/*"]
}
